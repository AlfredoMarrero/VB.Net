@model CarLoanWeb.Models.CarLoanModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@{ 
    var mu = Model.monthlyPayment;
}
<section>
    @using (Html.BeginForm("Calculate", "CarLoan", FormMethod.Post, new { id = "formCalculate" }))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.loanAmount)
            @Html.TextBoxFor(m => m.loanAmount, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.interestRate)
            @Html.TextBoxFor(m => m.interestRate, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.durationInMonth)
            @Html.TextBoxFor(m => m.durationInMonth, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.monthlyPayment)
            @Html.TextBoxFor(m => m.monthlyPayment, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.totalInterestPaid)
            @Html.TextBoxFor(m => m.totalInterestPaid, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <button id="getCarLoan" type="submit">Calculate</button>
        </div>
    }
</section>